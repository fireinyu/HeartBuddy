<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HeartBuddy" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- colors-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="backgroundColor">@color/white</item>
        <item name="toggleOnColor">#7D3BF8</item>
        <item name="toggleOffColor">#80B6B6B6</item>
        <item name="rowColor">#76B6A066</item>
        <item name="fieldColor">#73E68D0B</item>
        <item name="highlightColor">#F4F1BD</item>
        <item name="defaultFontColor">@color/black</item>
        <item name="defaultHintColor">@color/faint_grey</item>
        <item name="hrColor">#2D9E31</item>
        <item name="hrHintColor">#592D9E31</item>
        <item name="diasColor">#344CD1</item>
        <item name="diasHintColor">#59344CD1</item>
        <item name="sysColor">@color/magenta</item>
        <item name="sysHintColor">#59ED145A</item>
    </style>

    <style name="Theme.HeartBuddy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HeartBuddy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HeartBuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>